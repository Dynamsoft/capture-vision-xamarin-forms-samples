<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Dynamsoft Capture Vision"
             x:Class="BarcodeReaderSimpleSample.MainPage">

    <StackLayout>
        <Label x:Name="mainPageLabel" Text = '' HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
        <Button x:Name="oneoffscanButton" Text="One-off Scan" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="oneoffscanButton_Clicked"/>
        <Button x:Name="customRenderer" Text="Start Scanning" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="OnCustomRendererButtonClicked" />
    </StackLayout>

</ContentPage>
